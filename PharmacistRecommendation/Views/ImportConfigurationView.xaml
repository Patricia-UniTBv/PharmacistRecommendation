<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PharmacistRecommendation.Views.ImportConfigurationView"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <Grid Margin="24,40,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <StackLayout Grid.Row="0" Spacing="8" Margin="0,0,0,32">
                <Label Text="Configurare importuri" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       TextColor="#1F2937"
                       HorizontalOptions="Start"/>
                <BoxView HeightRequest="3" 
                         WidthRequest="60" 
                         BackgroundColor="#6366F1" 
                         HorizontalOptions="Start"/>
                <Label Text="ConfigureazÄƒ cÄƒile pentru importul documentelor" 
                       FontSize="16" 
                       TextColor="#6B7280"
                       Margin="0,8,0,0"/>
            </StackLayout>

            <!-- Main Content -->
            <StackLayout Grid.Row="1" Spacing="24">

                <!-- Prescription Path Card -->
                <Border BackgroundColor="White"
                        StrokeThickness="0"
                        Padding="20">
                    <Border.Shadow>
                        <Shadow Brush="#E5E7EB" Offset="0,2" Radius="8" Opacity="0.1"/>
                    </Border.Shadow>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>

                    <StackLayout Spacing="12">
                        <StackLayout Orientation="Horizontal" Spacing="8">
                            <Label Text="ðŸ“‹" FontSize="20"/>
                            <Label Text="Director reÈ›ete" 
                                   FontSize="18" 
                                   FontAttributes="Bold" 
                                   TextColor="#374151"
                                   VerticalOptions="Center"/>
                        </StackLayout>

                        <Label Text="SpecificÄƒ calea cÄƒtre directorul care conÈ›ine reÈ›etele" 
                               FontSize="14" 
                               TextColor="#6B7280"
                               Margin="28,0,0,8"/>

                        <Border BackgroundColor="#F9FAFB"
                                StrokeThickness="1"
                                Stroke="#E5E7EB">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Entry Text="{Binding PrescriptionPath, Mode=TwoWay}" 
                                   Placeholder="Exemplu: C:\Documents\Retete" 
                                   PlaceholderColor="#9CA3AF"
                                   TextColor="#374151"
                                   BackgroundColor="Transparent"
                                   Margin="12,0"/>
                        </Border>
                    </StackLayout>
                </Border>

                <!-- Receipt Path Card -->
                <Border BackgroundColor="White"
                        StrokeThickness="0"
                        Padding="20">
                    <Border.Shadow>
                        <Shadow Brush="#E5E7EB" Offset="0,2" Radius="8" Opacity="0.1"/>
                    </Border.Shadow>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>

                    <StackLayout Spacing="12">
                        <StackLayout Orientation="Horizontal" Spacing="8">
                            <Label Text="ðŸ§¾" FontSize="20"/>
                            <Label Text="Director bonuri" 
                                   FontSize="18" 
                                   FontAttributes="Bold" 
                                   TextColor="#374151"
                                   VerticalOptions="Center"/>
                        </StackLayout>

                        <Label Text="SpecificÄƒ calea cÄƒtre directorul care conÈ›ine bonurile" 
                               FontSize="14" 
                               TextColor="#6B7280"
                               Margin="28,0,0,8"/>

                        <Border BackgroundColor="#F9FAFB"
                                StrokeThickness="1"
                                Stroke="#E5E7EB">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Entry Text="{Binding ReceiptPath, Mode=TwoWay}" 
                                   Placeholder="Exemplu: C:\Documents\Bonuri" 
                                   PlaceholderColor="#9CA3AF"
                                   TextColor="#374151"
                                   BackgroundColor="Transparent"
                                   Margin="12,0"/>
                        </Border>
                    </StackLayout>
                </Border>

                <!-- Action Section -->
                <StackLayout Spacing="16" Margin="0,16,0,0">
                    <Button Text="SalveazÄƒ configuraÈ›ia" 
                            Command="{Binding SaveCommand}"
                            BackgroundColor="#6366F1"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            Padding="20,12"
                            CornerRadius="10"
                            HorizontalOptions="FillAndExpand">
                        
                    </Button>

                    <!-- Success Message -->
                    <Border BackgroundColor="#ECFDF5"
                            StrokeThickness="1"
                            Stroke="#A7F3D0"
                            Padding="16"
                            IsVisible="{Binding HasSuccessMessage}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <StackLayout Orientation="Horizontal" Spacing="8">
                            <Label Text="âœ…" FontSize="16" VerticalOptions="Center"/>
                            <Label Text="{Binding Message}" 
                                   TextColor="#065F46"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   HorizontalOptions="FillAndExpand"/>
                        </StackLayout>
                    </Border>
                </StackLayout>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>