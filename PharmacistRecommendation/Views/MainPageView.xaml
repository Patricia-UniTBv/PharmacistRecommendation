<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PharmacistRecommendation.Views.MainPageView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Pharmacist Recommendation - Pagina Principală"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" BackgroundColor="#F5F5F5">

            <!-- Header Section -->
            <Border StrokeThickness="1"
                    StrokeShape="RoundRectangle 10,10,10,10"
                    Stroke="#DDDDDD"
                    BackgroundColor="White"
                    Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Pharmacist Recommendation System"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           HorizontalOptions="Center" />
                    <Label Text="Selectați modulul dorit din opțiunile de mai jos"
                           FontSize="16"
                           TextColor="#7F8C8D"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <!-- Core Functions Section -->
            <Border StrokeThickness="1"
                    StrokeShape="RoundRectangle 5,5,5,5"
                    Stroke="#DDDDDD"
                    BackgroundColor="White"
                    Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Funcții principale"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Black" />
                    
                    <Grid ColumnSpacing="15" RowSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Medicamente Button -->
                        <Button Grid.Column="0"
                                Text="💊 Medicamente"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#3498DB"
                                HeightRequest="80"
                                Command="{Binding NavigateToMedicationsCommand}" />

                        <!-- Card Nou Button -->
                        <Button Grid.Column="1"
                                Text="👤 Card Nou"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#2ECC71"
                                HeightRequest="80"
                                Command="{Binding NavigateToNewCardCommand}" />

                        <!-- Monitorizare Button -->
                        <Button Grid.Column="2"
                                Text="📊 Monitorizare"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#E74C3C"
                                HeightRequest="80"
                                Command="{Binding NavigateToMonitoringCommand}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Document Issuance Section -->
            <Border StrokeThickness="1"
                    StrokeShape="RoundRectangle 5,5,5,5"
                    Stroke="#DDDDDD"
                    BackgroundColor="White"
                    Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Emitere documente"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Black" />
                    
                    <Grid ColumnSpacing="15" RowSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Act Mixt Button -->
                        <Button Grid.Column="0"
                                Text="📄 Act Mixt"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#9B59B6"
                                HeightRequest="80"
                                Command="{Binding NavigateToMixedIssuanceCommand}" />

                        <!-- Act cu Prescripție Button -->
                        <Button Grid.Column="1"
                                Text="📝 Act cu Prescripție"
                                FontSize="13"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#F39C12"
                                HeightRequest="80"
                                Command="{Binding NavigateToPrescriptionOnlyCommand}" />

                        <!-- Act Propriu Button -->
                        <Button Grid.Column="2"
                                Text="✍️ Act Propriu"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#1ABC9C"
                                HeightRequest="80"
                                Command="{Binding NavigateToWithoutPrescriptionCommand}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Configuration Section -->
            <Border StrokeThickness="1"
                    StrokeShape="RoundRectangle 5,5,5,5"
                    Stroke="#DDDDDD"
                    BackgroundColor="White"
                    Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Configurări"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Black" />
                    
                    <Grid ColumnSpacing="15" RowSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Utilizatori Button -->
                        <Button Grid.Row="0" Grid.Column="0"
                                Text="👥 Utilizatori"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#34495E"
                                HeightRequest="80"
                                Command="{Binding NavigateToUsersManagementCommand}" />

                        <!-- Moduri Administrare Button -->
                        <Button Grid.Row="0" Grid.Column="1"
                                Text="⚙️ Moduri Administrare"
                                FontSize="12"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#95A5A6"
                                HeightRequest="80"
                                Command="{Binding NavigateToAdministrationModesCommand}" />

                        <!-- Config. Import Button -->
                        <Button Grid.Row="0" Grid.Column="2"
                                Text="📁 Config. Import"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#8E44AD"
                                HeightRequest="80"
                                Command="{Binding NavigateToImportConfigCommand}" />

                        <!-- Config. GDPR Button -->
                        <Button Grid.Row="1" Grid.Column="0"
                                Text="🛡️ Config. GDPR"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#D35400"
                                HeightRequest="80"
                                Command="{Binding NavigateToGdprConfigCommand}" />

                        <!-- Adăugare Utilizator Button -->
                        <Button Grid.Row="1" Grid.Column="1"
                                Text="➕ Adăugare Utilizator"
                                FontSize="12"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#27AE60"
                                HeightRequest="80"
                                Command="{Binding NavigateToAddPharmacistCommand}" />

                        <!-- Rapoarte Button -->
                        <Button Grid.Row="1" Grid.Column="2"
                                Text="📈 Rapoarte"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#2980B9"
                                HeightRequest="80"
                                Command="{Binding NavigateToReportsCommand}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>