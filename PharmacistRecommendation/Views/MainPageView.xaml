<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PharmacistRecommendation.Views.MainPageView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#F8FAFB">

    <ContentPage.Resources>
        <!-- CULORI BAZÄ‚ (neutre + un accent foarte discret) -->
        <Color x:Key="BgPage">#F8FAFB</Color>
        <Color x:Key="BgCard">#FFFFFF</Color>
        <Color x:Key="StrokeCard">#E5E7EB</Color>
        <Color x:Key="TextPrimary">#1F2937</Color>
        <Color x:Key="TextSecondary">#6B7280</Color>
        <Color x:Key="AccentSoft">#22C55E</Color>
        <!-- folosit doar pe pressed/focus -->

        <!-- STIL CARD SECÈšIUNE -->
        <Style TargetType="Border" x:Key="SectionCard">
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="StrokeShape" Value="RoundRectangle 12" />
            <Setter Property="Stroke" Value="{StaticResource StrokeCard}" />
            <Setter Property="BackgroundColor" Value="{StaticResource BgCard}" />
            <Setter Property="Padding" Value="16" />
        </Style>

        <!-- STIL LABELURI -->
        <Style TargetType="Label" x:Key="SectionTitle">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        </Style>
        <Style TargetType="Label" x:Key="HeaderTitle">
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
            <Setter Property="HorizontalOptions" Value="Center" />
        </Style>
        <Style TargetType="Label" x:Key="HeaderSubtitle">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
            <Setter Property="HorizontalOptions" Value="Center" />
        </Style>

        <!-- STIL BUTON MONOCROM (alb cu bordurÄƒ) -->
        <Style TargetType="Button" x:Key="CardButton">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="BorderColor" Value="{StaticResource StrokeCard}" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="HeightRequest" Value="70" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="VisualStateManager.VisualStateGroups">
                <Setter.Value>
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="#F0FDF4" />
                                    <Setter Property="BorderColor" Value="{StaticResource AccentSoft}" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="#9CA3AF" />
                                    <Setter Property="BorderColor" Value="#E5E7EB" />
                                    <Setter Property="BackgroundColor" Value="#F3F4F6" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter.Value>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="50" BackgroundColor="{StaticResource BgPage}">

            <!-- Header -->
            <Border Style="{StaticResource SectionCard}">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Recomandarea farmacistului" Style="{StaticResource HeaderTitle}" />
                    <Label Text="SelectaÈ›i modulul dorit din opÈ›iunile de mai jos" Style="{StaticResource HeaderSubtitle}" />
                </VerticalStackLayout>
            </Border>

            <Border Style="{StaticResource SectionCard}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="FuncÈ›ii principale" Style="{StaticResource SectionTitle}" />

                    <Grid ColumnSpacing="12" RowSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                    Style="{StaticResource CardButton}"
                    Text="ðŸ“Š Monitorizare"
                    BackgroundColor="#4A90E2"  
                            TextColor="White"
                    Command="{Binding NavigateToMonitoringCommand}" />

                            <Button Grid.Column="1"
                    Style="{StaticResource CardButton}"
                    Text="ðŸ‘¤ Card Nou"
                    BackgroundColor="#50C878"  
                                TextColor="White"
                    Command="{Binding NavigateToNewCardCommand}" />

                                <Button Grid.Column="2"
                    Style="{StaticResource CardButton}"
                    Text="ðŸ’Š Medicamente"
                    BackgroundColor="#AAB7B8"  
                                    TextColor="White"
                    Command="{Binding NavigateToMedicationsCommand}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Emitere documente -->
            <Border Style="{StaticResource SectionCard}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Emitere documente" Style="{StaticResource SectionTitle}" />

                    <Grid ColumnSpacing="12" RowSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                    Style="{StaticResource CardButton}"
                    Text="ðŸ“„ Act Mixt"
                    BackgroundColor="#5D6D7E"  
                            TextColor="White"
                    Command="{Binding NavigateToMixedIssuanceCommand}" />

                            <Button Grid.Column="1"
                    Style="{StaticResource CardButton}"
                    Text="ðŸ“ Act cu PrescripÈ›ie"
                    FontSize="13"
                    BackgroundColor="#7DCEA0" 
                                TextColor="White"
                    Command="{Binding NavigateToPrescriptionOnlyCommand}" />

                                <Button Grid.Column="2"
                    Style="{StaticResource CardButton}"
                    Text="âœï¸ Act Propriu"
                    BackgroundColor="#F5B041" 
                                    TextColor="White"
                    Command="{Binding NavigateToWithoutPrescriptionCommand}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
