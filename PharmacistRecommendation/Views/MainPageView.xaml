<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PharmacistRecommendation.Views.MainPageView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#F8FAFB">

    <ContentPage.Resources>
        <!-- CULORI BAZĂ (neutre + un accent foarte discret) -->
        <Color x:Key="BgPage">#F8FAFB</Color>
        <Color x:Key="BgCard">#FFFFFF</Color>
        <Color x:Key="StrokeCard">#E5E7EB</Color>
        <Color x:Key="TextPrimary">#1F2937</Color>
        <Color x:Key="TextSecondary">#6B7280</Color>
        <Color x:Key="AccentSoft">#22C55E</Color>
        <!-- folosit doar pe pressed/focus -->

        <!-- STIL CARD SECȚIUNE -->
        <Style TargetType="Border" x:Key="SectionCard">
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="StrokeShape" Value="RoundRectangle 12" />
            <Setter Property="Stroke" Value="{StaticResource StrokeCard}" />
            <Setter Property="BackgroundColor" Value="{StaticResource BgCard}" />
            <Setter Property="Padding" Value="16" />
        </Style>

        <!-- STIL LABELURI -->
        <Style TargetType="Label" x:Key="SectionTitle">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        </Style>
        <Style TargetType="Label" x:Key="HeaderTitle">
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
            <Setter Property="HorizontalOptions" Value="Center" />
        </Style>
        <Style TargetType="Label" x:Key="HeaderSubtitle">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
            <Setter Property="HorizontalOptions" Value="Center" />
        </Style>

        <!-- STIL BUTON MONOCROM (alb cu bordură) -->
        <Style TargetType="Button" x:Key="CardButton">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="BorderColor" Value="{StaticResource StrokeCard}" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="HeightRequest" Value="70" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="VisualStateManager.VisualStateGroups">
                <Setter.Value>
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="#F0FDF4" />
                                    <Setter Property="BorderColor" Value="{StaticResource AccentSoft}" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="#9CA3AF" />
                                    <Setter Property="BorderColor" Value="#E5E7EB" />
                                    <Setter Property="BackgroundColor" Value="#F3F4F6" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter.Value>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="15" BackgroundColor="#F5F5F5">

            <!-- Header Section -->
            <Border StrokeThickness="1"
                    StrokeShape="RoundRectangle 10,10,10,10"
                    Stroke="#DDDDDD"
                    BackgroundColor="White"
                    Padding="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Pharmacist Recommendation System"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           HorizontalOptions="Center" />
                    <Label Text="Selectați modulul dorit din opțiunile de mai jos"
                           FontSize="14"
                           TextColor="#7F8C8D"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <!-- Core Functions Section -->
            <Border StrokeThickness="1"
                    StrokeShape="RoundRectangle 5,5,5,5"
                    Stroke="#DDDDDD"
                    BackgroundColor="White"
                    Padding="12">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Funcții principale"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black" />

                    <Grid ColumnSpacing="12" RowSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Text="Medicamente"
                                FontSize="13"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#3498DB"
                                HeightRequest="65"
                                Command="{Binding NavigateToMedicationsCommand}" />

                        <!-- Card Nou Button -->
                        <Button Grid.Column="1"
                                Text="Card Nou"
                                FontSize="13"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#2ECC71"
                                HeightRequest="65"
                                Command="{Binding NavigateToNewCardCommand}" />

                        <!-- Monitorizare Button -->
                        <Button Grid.Column="2"
                                Text="Monitorizare"
                                FontSize="13"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#E74C3C"
                                HeightRequest="65"
                                Command="{Binding NavigateToMonitoringCommand}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Document Issuance Section -->
            <Border StrokeThickness="1"
                    StrokeShape="RoundRectangle 5,5,5,5"
                    Stroke="#DDDDDD"
                    BackgroundColor="White"
                    Padding="12">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Emitere documente"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black" />

                    <Grid ColumnSpacing="12" RowSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Text="Act Mixt"
                                FontSize="13"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#9B59B6"
                                HeightRequest="65"
                                Command="{Binding NavigateToMixedIssuanceCommand}" />

                        <!-- Act cu Prescripție Button -->
                        <Button Grid.Column="1"
                                Text="Act cu Prescripție"
                                FontSize="12"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#F39C12"
                                HeightRequest="65"
                                Command="{Binding NavigateToPrescriptionOnlyCommand}" />

                        <!-- Act Propriu Button -->
                        <Button Grid.Column="2"
                                Text="Act Propriu"
                                FontSize="13"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#1ABC9C"
                                HeightRequest="65"
                                Command="{Binding NavigateToWithoutPrescriptionCommand}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Reports Section -->
            <Border StrokeThickness="1"
                    StrokeShape="RoundRectangle 5,5,5,5"
                    Stroke="#DDDDDD"
                    BackgroundColor="White"
                    Padding="12">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Rapoarte"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black" />

                    <Grid ColumnSpacing="12" RowSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Raport Acte Mixte Button -->
                        <Button Grid.Row="0" Grid.Column="0"
                                Text="Raport Acte Mixte"
                                FontSize="12"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#9B59B6"
                                HeightRequest="65"
                                Command="{Binding NavigateToMixedActsReportCommand}" />

                        <!-- Raport Acte Proprii Button -->
                        <Button Grid.Row="0" Grid.Column="1"
                                Text="Raport Acte Proprii"
                                FontSize="12"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#E74C3C"
                                HeightRequest="65"
                                Command="{Binding NavigateToOwnActsReportCommand}" />

                        <!-- Raport Acte Consecutive Button -->
                        <Button Grid.Row="1" Grid.Column="0"
                                Text="Raport Acte Consecutive"
                                FontSize="11"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#3498DB"
                                HeightRequest="65"
                                Command="{Binding NavigateToConsecutiveActsReportCommand}" />

                        <!-- Centru Rapoarte Button -->
                        <Button Grid.Row="1" Grid.Column="1"
                                Text="Centru Rapoarte"
                                FontSize="12"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#2980B9"
                                HeightRequest="65"
                                Command="{Binding NavigateToReportsCommand}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Configuration Section -->
            <Border StrokeThickness="1"
                    StrokeShape="RoundRectangle 5,5,5,5"
                    Stroke="#DDDDDD"
                    BackgroundColor="White"
                    Padding="12">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Configurări"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black" />

                    <Grid ColumnSpacing="12" RowSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Utilizatori Button -->
                        <Button Grid.Row="0" Grid.Column="0"
                                Text="Utilizatori"
                                FontSize="13"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#34495E"
                                HeightRequest="65"
                                Command="{Binding NavigateToUsersManagementCommand}" />

                        <!-- Moduri Administrare Button -->
                        <Button Grid.Row="0" Grid.Column="1"
                                Text="Moduri Administrare"
                                FontSize="11"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#95A5A6"
                                HeightRequest="65"
                                Command="{Binding NavigateToAdministrationModesCommand}" />

                        <!-- Config. Import Button -->
                        <Button Grid.Row="0" Grid.Column="2"
                                Text="Config. Import"
                                FontSize="13"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#8E44AD"
                                HeightRequest="65"
                                Command="{Binding NavigateToImportConfigCommand}" />

                        <!-- Config. GDPR Button -->
                        <Button Grid.Row="1" Grid.Column="0"
                                Text="Config. GDPR"
                                FontSize="13"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#D35400"
                                HeightRequest="65"
                                Command="{Binding NavigateToGdprConfigCommand}" />

                        <!-- Adăugare Utilizator Button -->
                        <Button Grid.Row="1" Grid.Column="1"
                                Text="Adăugare Utilizator"
                                FontSize="11"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#27AE60"
                                HeightRequest="65"
                                Command="{Binding NavigateToAddPharmacistCommand}" />

                        <!-- Email Config Button -->
                        <Button Grid.Row="1" Grid.Column="2"
                                Text="Config. Email"
                                FontSize="13"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#16A085"
                                HeightRequest="65"
                                Command="{Binding NavigateToEmailCommand}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
