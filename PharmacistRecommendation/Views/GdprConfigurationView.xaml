<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PharmacistRecommendation.Views.GdprConfigurationView">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Modificare document GDPR" FontSize="Large"/>
        <ScrollView>
        <Editor Text="{Binding ConsentTemplate, Mode=TwoWay}" 
                AutoSize="TextChanges" 
                HeightRequest="450" 
                IsEnabled= "true"/>
        </ScrollView>
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"/>
        <HorizontalStackLayout Spacing="10">
            <Button Text="Salvează"
                    Command="{Binding SaveConsentTemplateCommand}"
                    BackgroundColor="#28a745"/>
            <Button Text="Resetează la implicit"
                    Command="{Binding ResetConsentTemplateCommand}"
                    BackgroundColor="#007bff"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>