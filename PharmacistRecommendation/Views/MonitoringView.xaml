<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PharmacistRecommendation.Views.MonitoringView">

    <Grid BackgroundColor="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main scrollable content -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="15" Spacing="5">

                <!-- Header -->
                <Label Text="Monitorizare pacient"
                       FontSize="20" FontAttributes="Bold"
                       TextColor="Black" HorizontalOptions="Center"/>

                <!-- Patient Data Section -->
                <Border StrokeThickness="1" StrokeShape="RoundRectangle 5,5,5,5"
        Stroke="#DDDDDD" BackgroundColor="White" Padding="10">

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Date pacient" FontSize="14" FontAttributes="Bold"/>

                        <!-- First row: Card Number, CNP, CID -->
                        <Grid ColumnSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <VerticalStackLayout Spacing="2">
                                <Label Text="Număr card" FontSize="11" FontAttributes="Bold"/>
                                <Border StrokeThickness="0.6" StrokeShape="RoundRectangle 3" Stroke="#AAAAAA" HeightRequest="34">
                                    <Entry Text="{Binding CardNumber}" BackgroundColor="Transparent" FontSize="11"/>
                                </Border>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="CNP" FontSize="11" FontAttributes="Bold"/>
                                <Border StrokeThickness="0.6" StrokeShape="RoundRectangle 3" Stroke="#AAAAAA" HeightRequest="34">
                                    <Entry Text="{Binding Cnp}" BackgroundColor="Transparent" FontSize="11"/>
                                </Border>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                <Label Text="CID" FontSize="11" FontAttributes="Bold"/>
                                <Border StrokeThickness="0.6" StrokeShape="RoundRectangle 3" Stroke="#AAAAAA" HeightRequest="34">
                                    <Entry Text="{Binding Cid}" BackgroundColor="Transparent" FontSize="11"/>
                                </Border>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Second row: Last Name, First Name, Age, Gender -->
                        <Grid ColumnSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.7*"/>
                                <ColumnDefinition Width="0.7*"/>
                            </Grid.ColumnDefinitions>

                            <VerticalStackLayout Spacing="2">
                                <Label Text="Nume" FontSize="11" FontAttributes="Bold"/>
                                <Border StrokeThickness="0.6" StrokeShape="RoundRectangle 3" Stroke="#AAAAAA" HeightRequest="34">
                                    <Entry Text="{Binding LastName}" BackgroundColor="Transparent" FontSize="11"/>
                                </Border>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="Prenume" FontSize="11" FontAttributes="Bold"/>
                                <Border StrokeThickness="0.6" StrokeShape="RoundRectangle 3" Stroke="#AAAAAA" HeightRequest="34">
                                    <Entry Text="{Binding FirstName}" BackgroundColor="Transparent" FontSize="11"/>
                                </Border>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                <Label Text="Vârstă" FontSize="11" FontAttributes="Bold"/>
                                <Border StrokeThickness="0.6" StrokeShape="RoundRectangle 3" Stroke="#AAAAAA" HeightRequest="34">
                                    <Entry Text="{Binding Age}" Keyboard="Numeric" BackgroundColor="Transparent" FontSize="11"/>
                                </Border>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="3" Spacing="2">
                                <Label Text="Gen" FontSize="11" FontAttributes="Bold"/>
                                <Border StrokeThickness="0.6" StrokeShape="RoundRectangle 3" Stroke="#AAAAAA" HeightRequest="30">
                                    <Picker SelectedItem="{Binding Gender}" BackgroundColor="Transparent" FontSize="11">
                                        <Picker.Items>
                                            <x:String>Feminin</x:String>
                                            <x:String>Masculin</x:String>
                                        </Picker.Items>
                                    </Picker>
                                </Border>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Border>


                <!-- Monitored Parameters Section -->
                <Border StrokeThickness="1" StrokeShape="RoundRectangle 5,5,5,5"
        Stroke="#DDDDDD" BackgroundColor="White" Padding="10">

                    <VerticalStackLayout Spacing="5">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Text="Parametri monitorizați" FontSize="14" FontAttributes="Bold"/>

                            <HorizontalStackLayout Grid.Column="1" Spacing="5">
                                <Button Text="Resetează" Command="{Binding ClearCommand}" BackgroundColor="#007bff" TextColor="White" FontSize="10" Padding="4,2" WidthRequest="65"/>
                                <Button Text="Salvează" Command="{Binding SaveCommand}" BackgroundColor="#28a745" TextColor="White" FontSize="10" Padding="4,2" WidthRequest="70"/>
                            </HorizontalStackLayout>
                        </Grid>

                        <!-- Weight, Height -->
                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <VerticalStackLayout Spacing="2">
                                <Label Text="Greutate (kg)" FontSize="11" FontAttributes="Bold"/>
                                <Entry Text="{Binding Weight}" Keyboard="Numeric" FontSize="11" HeightRequest="25"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="Înălțime (cm)" FontSize="11" FontAttributes="Bold"/>
                                <Entry Text="{Binding Height}" Keyboard="Numeric" FontSize="11" HeightRequest="25"/>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Blood Pressure, Pulse -->
                        <Grid ColumnSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <VerticalStackLayout Spacing="2">
                                <Label Text="TA Sistolică" FontSize="11" FontAttributes="Bold"/>
                                <Entry Text="{Binding MaxBloodPressure}" Keyboard="Numeric" FontSize="11" HeightRequest="25"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="TA Diastolică" FontSize="11" FontAttributes="Bold"/>
                                <Entry Text="{Binding MinBloodPressure}" Keyboard="Numeric" FontSize="11" HeightRequest="25"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                <Label Text="Puls (bpm)" FontSize="11" FontAttributes="Bold"/>
                                <Entry Text="{Binding HeartRate}" Keyboard="Numeric" FontSize="11" HeightRequest="25"/>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Glucose, Pulse Oximetry, Temperature -->
                        <Grid ColumnSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <VerticalStackLayout Spacing="2">
                                <Label Text="Pulsoximetrie (%)" FontSize="11" FontAttributes="Bold"/>
                                <Entry Text="{Binding PulseOximetry}" Keyboard="Numeric" FontSize="11" HeightRequest="25"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="Glicemie (mg/dL)" FontSize="11" FontAttributes="Bold"/>
                                <Entry Text="{Binding BloodGlucose}" Keyboard="Numeric" FontSize="11" HeightRequest="25"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                <Label Text="Temperatură (°C)" FontSize="11" FontAttributes="Bold"/>
                                <Entry Text="{Binding BodyTemperature}" Keyboard="Numeric" FontSize="11" HeightRequest="25"/>
                            </VerticalStackLayout>
                        </Grid>

                    </VerticalStackLayout>
                </Border>


                <!-- History Section -->
                <Border StrokeThickness="1" StrokeShape="RoundRectangle 5,5,5,5"
                        Stroke="#DDDDDD" BackgroundColor="White" Padding="10">

                    <VerticalStackLayout Spacing="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Text="Istoric" FontSize="16" FontAttributes="Bold"/>

                            <HorizontalStackLayout Grid.Column="1" Spacing="10" VerticalOptions="Center">
                                <Label Text="De la:" FontSize="13" VerticalOptions="Center"/>
                                <DatePicker Date="{Binding StartDate}" Format="dd/MM/yy" FontSize="12" Margin="0,5,0,0"/>

                                <Label Text="Până la:" FontSize="13" VerticalOptions="Center"/>
                                <DatePicker Date="{Binding EndDate}" Format="dd/MM/yy" FontSize="12" Margin="0,5,0,0"/>

                                <Button Text="Caută" Command="{Binding LoadHistoryCommand}"
                                        BackgroundColor="#007bff" TextColor="White"
                                        FontSize="11" Padding="6,3" WidthRequest="60" HeightRequest="10"/>
                            </HorizontalStackLayout>
                        </Grid>

                        <!-- Table Header (always visible) -->
                        <Grid Padding="2" BackgroundColor="#f0f0f0" ColumnSpacing="35">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="45"/>
                                <ColumnDefinition Width="45"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="55"/>
                            </Grid.ColumnDefinitions>

                            <Label Text="Data" Grid.Column="0" FontAttributes="Bold" FontSize="11" HorizontalTextAlignment="Center"/>
                            <Label Text="TA Sistolică" Grid.Column="1" FontAttributes="Bold" FontSize="11" HorizontalTextAlignment="Center"/>
                            <Label Text="TA Diastolică" Grid.Column="2" FontAttributes="Bold" FontSize="11" HorizontalTextAlignment="Center"/>
                            <Label Text="Puls" Grid.Column="3" FontAttributes="Bold" FontSize="11" HorizontalTextAlignment="Center"/>
                            <Label Text="SpO₂" Grid.Column="4" FontAttributes="Bold" FontSize="11" HorizontalTextAlignment="Center"/>
                            <Label Text="Glicemie" Grid.Column="5" FontAttributes="Bold" FontSize="11" HorizontalTextAlignment="Center"/>
                            <Label Text="Temp." Grid.Column="6" FontAttributes="Bold" FontSize="11" HorizontalTextAlignment="Center"/>
                            <Label Text="Greutate" Grid.Column="7" FontAttributes="Bold" FontSize="11" HorizontalTextAlignment="Center"/>
                            <Label Text="Înălțime" Grid.Column="8" FontAttributes="Bold" FontSize="11" HorizontalTextAlignment="Center"/>
                        </Grid>

                        <!-- Table Data -->
                        <ScrollView>
                        <CollectionView ItemsSource="{Binding HistoryList}" >
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="4" ColumnSpacing="35">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="45"/>
                                            <ColumnDefinition Width="45"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="55"/>
                                            <ColumnDefinition Width="55"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Text="{Binding Date, StringFormat='{0:dd.MM.yy}'}" Grid.Column="0" FontSize="12" HorizontalTextAlignment="Center"/>
                                        <Label Text="{Binding MaxBloodPressure}" Grid.Column="1" FontSize="12" HorizontalTextAlignment="Center"/>
                                        <Label Text="{Binding MinBloodPressure}" Grid.Column="2" FontSize="12" HorizontalTextAlignment="Center"/>
                                        <Label Text="{Binding HeartRate}" Grid.Column="3" FontSize="12" HorizontalTextAlignment="Center"/>
                                        <Label Text="{Binding PulseOximetry}" Grid.Column="4" FontSize="12" HorizontalTextAlignment="Center"/>
                                        <Label Text="{Binding BloodGlucose}" Grid.Column="5" FontSize="12" HorizontalTextAlignment="Center"/>
                                        <Label Text="{Binding BodyTemperature}" Grid.Column="6" FontSize="12" HorizontalTextAlignment="Center"/>
                                        <Label Text="{Binding Weight}" Grid.Column="7" FontSize="12" HorizontalTextAlignment="Center"/>
                                        <Label Text="{Binding Height}" Grid.Column="8" FontSize="12" HorizontalTextAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        </ScrollView>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Fixed Email and Actions Section at bottom -->
        <Border Grid.Row="1" StrokeThickness="1" StrokeShape="RoundRectangle 5,5,5,5"
                Stroke="#DDDDDD" BackgroundColor="White" Padding="15" Margin="15,0,15,15">

            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Text="Email pacient:" Grid.Column="0" VerticalOptions="Center" FontSize="12"/>

                <Entry Text="{Binding PatientEmail}" Grid.Column="1" 
                       Placeholder="ex: ion.popescu@mail.com" Keyboard="Email" FontSize="12" HeightRequest="35"/>

                <Button Text="Printare PDF" Grid.Column="2" Command="{Binding GeneratePdfCommand}"
                        BackgroundColor="#28a745" TextColor="White" FontSize="12" Padding="8,4" WidthRequest="100"/>

                <Button Text="Trimite Mail" Grid.Column="3" Command="{Binding SendEmailCommand}"
                        BackgroundColor="#007bff" TextColor="White" FontSize="12" Padding="8,4" WidthRequest="100"/>
            </Grid>
        </Border>

    </Grid>
</ContentPage>