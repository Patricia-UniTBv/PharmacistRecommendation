<Shell
    x:Class="PharmacistRecommendation.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PharmacistRecommendation.Views">

    <Shell.MenuBarItems>
        <MenuBarItem Text="Card">
            <MenuFlyoutItem Text="Card Nou" Clicked="OnNewCardClicked"/>
        </MenuBarItem>

        <MenuBarItem Text="Monitorizare" >
            <MenuFlyoutItem Text="Monitorizare" Clicked="OnMonitClicked" />
        </MenuBarItem>

        <MenuBarItem Text="Emitere Documente">
            <MenuFlyoutItem Text="Emitere act mixt"  Clicked="OnMixedIssuanceClicked" />
            <MenuFlyoutItem Text="Emitere act consecutiv prescripției" Clicked="OnPrescriptionOnlyClicked" />
            <MenuFlyoutItem Text="Emitere act propriu" Clicked="OnWithoutPrescriptionClicked" />
        </MenuBarItem>

        <MenuBarItem Text="Rapoarte">
            <MenuFlyoutItem Text="Vezi Raport" />
        </MenuBarItem>

        <MenuBarItem Text="Configurări">
            <MenuFlyoutItem Text="Adăugare utilizator" Clicked="OnAddPharmacistClicked"/>
            <MenuFlyoutItem Text="Listă utilizatori" Clicked="OnUsersManagementClicked"/>
            <MenuFlyoutItem Text="Modificare document GDPR" Clicked="OnGdprConfigClicked"/>
            <MenuFlyoutItem Text="Moduri administrare" Clicked="OnAdministrationModesClicked"/>
            <MenuFlyoutItem Text="Configurare importuri" Clicked="OnImportConfigClicked"/>
            <MenuFlyoutItem Text="Medicamente" Clicked="OnMedicationsClicked"/>
        </MenuBarItem>

        <MenuBarItem Text="Ajutor">
            <MenuFlyoutItem Text="Despre" />
        </MenuBarItem>
    </Shell.MenuBarItems>

    <ShellContent Style="{StaticResource MyPageStyle}" ContentTemplate="{DataTemplate views:MainPageView}"/>

    <Shell.Resources>
        <Style x:Key="MyPageStyle" TargetType="Element">
            <Setter Property="Shell.BackgroundColor" Value="#34495E" />
            <Setter Property="Shell.TitleColor" Value="White" />
            <Setter Property="Shell.DisabledColor" Value="White" />
        </Style>
    </Shell.Resources>
</Shell>
