<Shell
    x:Class="PharmacistRecommendation.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PharmacistRecommendation.Views">

    <Shell.MenuBarItems>
        <MenuBarItem Text="Card">
            <MenuFlyoutItem Text="Adaugă Card" />
        </MenuBarItem>

        <MenuBarItem Text="Monitorizare" >
            <MenuFlyoutItem Text="Monitorizare" Clicked="OnMonitClicked" />
        </MenuBarItem>

        <MenuBarItem Text="Emitere Documente">
            <MenuFlyoutItem Text="Emite Document" />
        </MenuBarItem>

        <MenuBarItem Text="Rapoarte">
            <MenuFlyoutItem Text="Vezi Raport" />
        </MenuBarItem>

        <MenuBarItem Text="Configurări">
            <MenuFlyoutItem Text="Adăugare utilizator" Clicked="OnAddPharmacistClicked"/>
            <MenuFlyoutItem Text="Listă utilizatori" Clicked="OnUsersManagementClicked"/>
        </MenuBarItem>

        <MenuBarItem Text="Ajutor">
            <MenuFlyoutItem Text="Despre" />
        </MenuBarItem>
    </Shell.MenuBarItems>

    <ShellContent  Style="{StaticResource MyPageStyle}" ContentTemplate="{DataTemplate views:MonitoringView}"/>

    <Shell.Resources>
        <Style x:Key="MyPageStyle" TargetType="Element">
            <Setter Property="Shell.BackgroundColor" Value="#34495E" />
            <Setter Property="Shell.TitleColor" Value="White" />
            <Setter Property="Shell.DisabledColor" Value="White" />
        </Style>
    </Shell.Resources>
</Shell>
